<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
    android:background="#FEFBF8"
    android:padding="10dp">

    <TextView
        android:id="@+id/enterScoreText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/score_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#6E5335"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:background="@drawable/header_bg" />

    <EditText
        android:id="@+id/score"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterScoreText"
        android:labelFor="@+id/score"
        android:background="@drawable/textbox_bg"
        android:inputType="numberSigned"
        android:padding="15dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/submitScore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score"
        android:text="@string/submit"
        android:background="@drawable/input_btn"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="10dp" />
</RelativeLayout>