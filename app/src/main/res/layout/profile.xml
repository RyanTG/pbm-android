<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#EFEFEF">
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#303030"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/header_bg"
            android:gravity="center_horizontal" />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/createdAtLabel"
                android:text="Member Since: "
                android:labelFor="@+id/createdAtTextView"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/createdAtTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </LinearLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:background="@drawable/profile_border">
            <TextView
                android:id="@+id/numMachinesAddedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="5sp"
                android:textColor="#F53240"
                android:background="#d3ecff" />
            <TextView
                android:id="@+id/numMachinesAddedLabel"
                android:text=" Machines Added"
                android:labelFor="@+id/numMachinesAddedTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="8dp"
                android:paddingLeft="65dp"
                android:paddingRight="0dp"/>
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:background="@drawable/profile_border">
            <TextView
                android:id="@+id/numMachinesRemovedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="5sp"
                android:textColor="#F53240"
                android:background="#d3ecff"/>
            <TextView
                android:id="@+id/numMachinesRemovedLabel"
                android:text=" Machines Removed"
                android:labelFor="@+id/numMachinesRemovedTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="8dp"
                android:paddingLeft="65dp"
                android:paddingRight="0dp" />
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:background="@drawable/profile_border">
            <TextView
                android:id="@+id/numLocationsEditedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="5sp"
                android:textColor="#F53240"
                android:background="#d3ecff"/>
            <TextView
                android:id="@+id/numLocationsEditedLabel"
                android:text=" Locations Edited"
                android:labelFor="@+id/numLocationsEditedTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="8dp"
                android:paddingLeft="65dp"
                android:paddingRight="0dp" />
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:background="@drawable/profile_border">
            <TextView
                android:id="@+id/numLocationsSuggestedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="5sp"
                android:textColor="#F53240"
                android:background="#d3ecff" />
            <TextView
                android:id="@+id/numLocationsSuggestedLabel"
                android:text=" Locations Suggested"
                android:labelFor="@+id/numLocationsSuggestedTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="8dp"
                android:paddingLeft="65dp"
                android:paddingRight="0dp"/>
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:background="@drawable/profile_border">
            <TextView
                android:id="@+id/numLmxCommentsLeftTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="5sp"
                android:textColor="#F53240"
                android:background="#d3ecff" />
            <TextView
                android:id="@+id/numLmxCommentsLeftLabel"
                android:text=" Conditions Left"
                android:labelFor="@+id/numLmxCommentsLeftTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="8dp"
                android:paddingLeft="65dp"
                android:paddingRight="0dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/locationsEditedLabel"
            android:text="Locations Edited:"
            android:labelFor="@+id/locationsEditedTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="#d3ecff"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />

        <ListView android:id="@+id/locationsEditedTable"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/highScoresLabel"
            android:text="High Scores"
            android:labelFor="@+id/highScoresTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="#d3ecff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp" />

        <ListView android:id="@+id/highScoresTable"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>