<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <LinearLayout
            android:id="@+id/locationData"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_bg">
            <TextView
                android:id="@+id/locationName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/darkText"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp" />

            <TextView
                android:id="@+id/locationMetadata"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dip"
                android:paddingRight="10dip"
                android:paddingStart="10dip"
                android:paddingLeft="10dip"
                android:textSize="18sp"
                android:textColor="@color/darkText" />

            <TextView
                android:id="@+id/locationPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:paddingEnd="10dip"
                android:paddingRight="10dip"
                android:paddingStart="10dip"
                android:paddingLeft="10dip"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:linksClickable="true"
                android:paddingEnd="10dip"
                android:paddingRight="10dip"
                android:paddingStart="10dip"
                android:paddingLeft="10dip"
                android:textSize="15sp"
                android:paddingBottom="4dip"
                android:text="@string/website_link"
                android:drawableRight="@drawable/ic_action_open_in_new_black"
                android:drawablePadding="5dip" />

            <TextView
                android:id="@+id/locationType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dip"
                android:paddingRight="10dip"
                android:paddingStart="10dip"
                android:paddingLeft="10dip"
                android:textColor="@color/medText"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/operator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:textColor="@color/medText"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:textColor="@color/medText"
                android:textSize="15sp"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/distance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:textColor="@color/medText"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/locationLastUpdated"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_marginTop="8dp"
                android:background="@drawable/updated_on_bg"
                android:gravity="center_horizontal"
                android:textColor="#6b6b6b" />
        </LinearLayout>

        <Button
            android:id="@+id/confirmLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location_confirm"
            android:textStyle="italic"
            android:background="@drawable/input_btn"
            android:textSize="13sp"
            android:minHeight="36dp"
            android:textColor="@color/lightText"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="6dp"
            android:elevation="2dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/lmxTable"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background" />
    </LinearLayout>
</ScrollView>