<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/machineListRow"
    android:paddingLeft="5dip"
    android:paddingRight="5dip">

    <TextView
        android:id="@+id/machine_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/metaData"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/machine_info"
        android:layout_toEndOf="@+id/machine_info"
        android:textStyle="italic"
        android:layout_marginRight="5dp" />

    <ImageView
        android:id="@+id/machineSelectButton"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_centerVertical="true"
        android:contentDescription="@string/machine_button_desc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/metaData"
        android:layout_toRightOf="@+id/metaData"
        android:src="@drawable/machine_icon"/>

</RelativeLayout>