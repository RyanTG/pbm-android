<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent" android:paddingLeft="5dip" android:paddingRight="5dip">
	<TextView android:id="@+id/name" android:layout_width="330dip" android:layout_height="wrap_content" android:textSize="20sp" />
	<TextView android:id="@+id/numMachines" android:layout_toEndOf="@+id/name"
        android:layout_width="5dip" android:layout_height="20dip"
        android:layout_centerVertical="true"
        android:background="@drawable/circle" android:gravity="center" android:shadowColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white" android:textSize="12sp" />
	<TextView android:layout_below="@+id/name" android:id="@+id/distance"
		android:textSize="15sp" android:layout_width="100dip" android:layout_height="wrap_content" />
</RelativeLayout>