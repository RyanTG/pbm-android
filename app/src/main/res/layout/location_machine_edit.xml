<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewId"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#EFEFEF">
    <Button
        android:id="@+id/pintips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:linksClickable="true"
        android:text="View playing tips on pintips.net"
        android:background="@drawable/input_btn"
        android:textSize="15sp"
        android:minHeight="36dp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/spacer"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#F53240" />

    <Button
        android:id="@+id/add_condition_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Add a new condition report"
        android:textSize="15sp"
        android:minHeight="36dp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_btn"
        android:elevation="2dp" />

    <com.pbm.NonScrollListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@android:id/empty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:text="No conditions"/>

    <TextView
        android:id="@+id/spacer2"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#F53240"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/add_new_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add Your High Score"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:background="@drawable/input_btn"
        android:minHeight="36dp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp" />

    <com.pbm.NonScrollListView
        android:id="@+id/score_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/empty_score"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:text="No scores"/>

    <TextView
        android:id="@+id/spacer3"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#F53240"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/other_locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lookup Other Locations With MACHINE NAME"
        android:layout_margin="10dp"
        android:background="@drawable/input_btn"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:minHeight="36dp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp" />
    <Button
        android:id="@+id/remove_machine_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F53240"
        android:textColor="@android:color/white"
        android:text="Remove machine"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:height="36dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:elevation="2dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
</ScrollView>