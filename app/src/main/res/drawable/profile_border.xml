<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item
        android:top="-3dp"
        android:left="-3dp"
        android:right="-3dp"
        android:bottom="3dp">
        <shape>
            <solid
                android:color="@color/background"/>
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <stroke
                android:width="2dp"
                android:color="@color/red100" />
        </shape>
    </item>
</layer-list>