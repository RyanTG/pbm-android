<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:left="0dp"
        android:right="0dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape>
            <solid
                android:color="#191919"/>
            <corners
                android:radius="15dp" />
            <padding
                android:left="3dp"
                android:top="0dp"
                android:right="3dp"
                android:bottom="0dp" />
            <stroke
                android:width="3dip"
                android:color="#656565" />
        </shape>
    </item>
<item
    android:left="0dp"
    android:right="0dp"
    android:top="3dp"
    android:bottom="3dp">
    <shape>
        <solid
            android:color="#303030"/>
        <corners
            android:radius="15dp" />
        <padding
            android:left="3dp"
            android:top="0dp"
            android:right="3dp"
            android:bottom="0dp" />
        <stroke
            android:width="3dip"
            android:color="#a9a9a9" />
    </shape>
</item>


</selector>