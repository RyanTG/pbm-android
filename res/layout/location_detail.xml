<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/locationName" android:textSize="20dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingLeft="5dip" />
	<TextView android:layout_width="fill_parent" android:id="@+id/blankSpacer"
		android:layout_below="@+id/locationName" android:layout_height="3dip"
		android:background="#000000" />
	<TextView android:layout_width="fill_parent" android:id="@+id/spacer"
		android:layout_below="@+id/blankSpacer" android:layout_height="3dip"
		android:background="#FFFFFF" />
	<ListView android:id="@+id/locationDetailTable"
		android:layout_below="@+id/spacer" android:dividerHeight="1dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
</RelativeLayout>